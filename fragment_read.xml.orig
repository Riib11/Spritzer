<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">


    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:contentDescription="This will be the OpenSpritz-Android window" />-->

    <pro.dbro.openspritz.lib.SpritzerTextView
        android:id="@+id/spritzText"
        android:layout_width="@dimen/spritzer_text_view_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:gravity="left"
        android:keepScreenOn="true"
        android:textSize="@dimen/spritzer_text_view_text_size"
        android:typeface="monospace" />

    <!--<view-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--class="pro.dbro.openspritz.lib.SpritzerTextView"-->
        <!--android:id="@+id/spritzText"-->
        <!--android:layout_weight="0.27"-->
        <!--android:clickable="true"-->
        <!--android:focusableInTouchMode="true"-->
        <!--android:keepScreenOn="true"-->
        <!--android:typeface="monospace" />-->

    <Button
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:text="Play/Pause"
        android:id="@+id/buttonPlay_Pause"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <SeekBar
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarWPM"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Words Per Minute"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />

    <SeekBar
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarTextSize"
        android:indeterminate="false"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Text Size"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarReadProgress"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Progress"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.29">

        <Button
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:text="Show Bookmarks"
            android:id="@+id/buttonShowBookmarks"
            android:layout_gravity="right|center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:text="Add Bookmark"
            android:id="@+id/buttonAddBookMark"
            android:layout_gravity="left|center_vertical" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

</LinearLayout>